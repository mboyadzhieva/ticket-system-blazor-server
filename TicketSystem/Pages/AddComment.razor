@page "/comment/{ticketId}"

<h3>AddComment</h3>

@if (!string.IsNullOrEmpty(ErrorMsg))
{
    <div class="error">
        @ErrorMsg
    </div>
}
<EditForm Model="@CommentModel" OnValidSubmit="@CreateComment">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group col-md-12">
        <InputTextArea @bind-Value="@CommentModel.Content" id="ticketContent" class="form-control" placeholder="Content" />
    </div>
    <div class="input-group col-md-12">
        <div class="custom-file">
            <label class="custom-file-label">Upload photo</label>
            <InputFile class="custom-file-input" id="ticketAvatar" OnChange="@OnFileSubmit"></InputFile>
        </div>
    </div>
    <div class="form-group col-md-12 text-right">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</EditForm>