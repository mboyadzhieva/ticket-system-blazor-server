@page "/comments/{ticketId}"
@attribute [Authorize]

@if (AllComments == null || !AllComments.Any())
{
    <p>No comments for this ticket!</p>
    <a href="/comment/@TicketId" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Comment</a>
}
else
{
    <a href="/comment/@TicketId" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Comment</a>
    <hr>
    <div class="row row-cols-1 row-cols-md-2 g-4">

        @foreach (CommentModel comment in AllComments)
        {
            <div class="col">
                <CommentSection Comment="@comment"></CommentSection>
            </div>
        }
    </div>
}
