@page "/comments/{ticketId}"

@if (AllComments == null || !AllComments.Any())
{
    <p>No comments for this ticket!</p>
    <a href="/comment/@TicketId" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Comment</a>
}
else
{
    <div class="container">
        <div class="d-flex justify-content-between p-3 border-top">
            <a href="/comment/@TicketId" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Comment</a>
        </div>
        <div class="row">
            @foreach (CommentModel comment in AllComments)
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="/Uploads/@comment.PhotoId" alt="No picture">
                    <div class="card-body">
                        <p class="card-text">@comment.Content</p>
                    </div>
                </div>
            }
        </div>
    </div>
}
