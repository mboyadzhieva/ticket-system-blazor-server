<div class="card h-100 mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/Uploads/@Comment.PhotoId" class="img-fluid rounded-start" alt="No image">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p class="card-text">
                    @Comment.Content
                </p>
                <p class="card-text"><small class="text-muted">@Comment.CreatedOn</small></p>
            </div>
        </div>
    </div>
</div>
